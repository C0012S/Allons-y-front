<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:background="@color/black"
        android:fontFamily="@font/dohyun"
        android:padding="15dp"
        android:shadowColor="@color/white"
        android:shadowDx="2.0"
        android:shadowDy="2.0"
        android:shadowRadius="2.0"
        android:text="MOV"
        android:textAlignment="center"
        android:textColor="#264711"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <EditText
            android:id="@+id/search_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/searchview_round"
             />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_marginRight="10dp"
            android:layout_alignTop="@id/search_edt"
            android:layout_alignRight="@id/search_edt"
            android:layout_alignBottom="@id/search_edt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/search_icon" />
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_alignTop="@id/imageView2"
            android:layout_alignRight="@id/imageView2"
            android:layout_alignBottom="@id/imageView2"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:srcCompat="@drawable/search" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_weight="5"
        android:id="@+id/recylcerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/watch_alone_enter_button"
        android:layout_weight="0.3"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_margin="10dp"
        android:backgroundTint="#C7DCBF"
        android:background="@drawable/primary_btn_yellow"
        android:text="영화 보기"
        android:textColor="@color/black"
        android:textSize="20sp"/>

</LinearLayout>